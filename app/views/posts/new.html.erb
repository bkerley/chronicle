<h1>New post</h1>

<%= error_messages_for :post %>

<% form_for(@post) do |f| %>
<p>
	<%= f.label :title %><br />
	<%= f.text_field :title %>
</p>
<p>
	<%= f.label :slug %><br />
	<%= f.text_field :slug %>
</p>
<p>
	<%= f.label :body %><br />
	<%= f.text_area :body %>
</p>
<p>
	<%= f.label :tag_string %><br />
	<%= f.text_field :tag_string %><br />
<p>
	<%= f.submit "Create" %>
</p>
<% end %>

<%= link_to 'Back', posts_path %>
